---
import IconArrow from './icons/Arrow.astro';

const options = {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}

const {post} = Astro.props;
const slug = post.frontmatter.slug || 
             post.file.split('/')[post.file.split('/').length - 2];

const {title, summary, date} = post.frontmatter;
---

<a class="card" href={ `/blog/${slug}/` } title={ title }>
	<main>
		<h3>{ title }</h3>
		<summary>{ Intl.DateTimeFormat('us-EN', options).format(new Date(date)) }</summary>
		<p>{ summary }</p>
	</main>
	<footer>READ MORE <IconArrow /></footer>
</a>
