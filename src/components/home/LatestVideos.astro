---
import VideoCard from '../BlogCard.astro';

  const allVideos = [] //Astro.fetchContent('../../content/videos/**/*.md');
  const sortedVideos = allVideos.sort((a, b) => new Date(b.date) - new Date(a.date))
															.slice(0, 3);
---

<section class="latestPosts">
	<div class="cardList">
		<h2>Latest <span>Videos</span></h2>
		<ul>
		{
			sortedVideos.map((video) => 
				<li>
					<VideoCard video={video} />
				</li>
			)
		}
		</ul>
		<a 
			class="all" 
			rel="nofollow" 
			href="https://youtube.com/baldbeardedbuilder" 
			title="See all videos">See all videos</a>
	</div>
</section>
