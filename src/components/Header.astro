---
import Logo from '../components/pageHeader/Logo.astro';
import Navigation from '../components/pageHeader/Navigation.astro';
import Toggle from '../components/pageHeader/Toggle.tsx';

---
  
<style lang="scss">
header {
  @apply w-full;
  @apply grid;
  grid-template-columns: 40px auto;

  section {
    @apply flex justify-between;
    @apply my-6 mx-auto;
    @apply px-4;
    @apply w-full;
    @apply lg:max-w-4xl xl:max-w-6xl;

    @apply text-gray-900 dark:text-white;

    .end {
      @apply flex flex-row items-center;
      @apply justify-end;
    }
  }
}
</style>


<header>
  <Logo/>
  <Navigation/>
  <Toggle client:visible/>
</header>