---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title, description, tags, canonicalUrl } = Astro.props;
---

<style lang="scss">
  html {
    scroll-behavior: smooth;
  }

  html,
  body {
    @apply h-full;
  }

  body {
    @apply flex flex-col;
    @apply font-raleway;

    > main {
      @apply mb-auto;
      @apply flex flex-col;
    }
  }
</style>

<html class="no-js" lang="en" dir="ltr">
  <head>
    <BaseHead {title} {description} {tags} {canonicalUrl} />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
