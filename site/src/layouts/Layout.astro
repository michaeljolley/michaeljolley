---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title?: string;
  description?: string;
  tags?: string[];
  canonicalUrl?: string;
}

const { title, description, tags, canonicalUrl } = Astro.props;

const { url } = Astro;
import BackgroundImage from "../scripts/backgroundImage";

const public_id = `${url.pathname}index`.replace(/\//g, "-").substring(1);
const background = await BackgroundImage(public_id);
---

<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <BaseHead {title} {description} {tags} {canonicalUrl} />
  </head>
  <body style={background}>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
